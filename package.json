    "babel-runtime": "^6.23.0",
    "bootstrap": "^3.3.7",
    "bunyan": "^2.0.0",
    "bunyan-format": "^0.2.1",
    "classnames": "^2.2.5",
    "create-react-class": "^15.6.0",
    "css-annotation": "^0.6.2",
    "deep-diff": "^0.3.8",
    "faker": "^4.1.0",
    "fibers": "^2.0.0",
    "flatten-obj": "^3.1.0",
    "font-awesome": "^4.7.0",
    "handlebars": "^4.0.10",
    "i18next": "8.4.3",
    "i18next-browser-languagedetector": "^2.0.0",
    "i18next-localstorage-cache": "^1.1.1",
    "i18next-sprintf-postprocessor": "^0.2.2",
    "immutable": "^3.8.1",
    "jquery-i18next": "^1.2.0",
    "later": "^1.2.0",
