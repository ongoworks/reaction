{
  "label": "Social",
  "name": "reaction-social",
  "icon": "fa fa-share-alt",
  "autoEnable": true,
  "settings": {
    "public": {
      "autoInit": true,
      "apps": {
        "facebook": {
          "appId": "",
          "version": "v2.1",
          "profilePage": "",
          "enabled": false
        },
        "twitter": {
          "username": "",
          "profilePage": "",
          "enabled": false
        },
        "googleplus": {
          "profilePage": "",
          "enabled": false
        },
        "pinterest": {
          "profilePage": "",
          "enabled": false
        }
      },
      "appsOrder": ["facebook", "twitter", "pinterest", "googleplus"],
      "iconOnly": true,
      "faSize": "fa-2x",
      "faClass": "square",
      "targetWindow": "_self"
    }
  },
  "registry": [{
    "provides": "dashboard",
    "label": "Social",
    "description": "Social Channel configuration",
    "icon": "fa fa-share-alt",
    "priority": 2,
    "container": "connect",
    "permissions": [{
      "label": "Social",
      "permission": "dashboard/social"
    }]
  }, {
    "label": "Social Settings",
    "route": "/dashboard/social",
    "provides": "settings",
    "container": "dashboard",
    "template": "socialSettings"
  }, {
    "template": "reactionSocial",
    "provides": "social"
  }]
}
